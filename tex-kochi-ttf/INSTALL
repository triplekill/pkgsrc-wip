#!/bin/sh
# $NetBSD$

PKGNAME=$1
STAGE=$2

SPECIALMAP=@TEXMFDIRS@/fonts/map/fontname/special.map
TTFONTSMAP=@TEXMFDIRS@/ttf2tfm/base/ttfonts.map

case ${STAGE} in
PRE-INSTALL)
	;;
POST-INSTALL)
	echo "Edit ${SPECIALMAP}"
	echo "@c Japanese TrueType fonts by Kochi:"   >> ${SPECIALMAP}
	echo "gothic          kochi           gothic" >> ${SPECIALMAP}
	echo "mincho          kochi           mincho" >> ${SPECIALMAP}

	echo "Edit ${TTFONTSMAP}"
	echo "% Japanese TrueType fonts by Kochi:"            >> ${TTFONTSMAP}
	echo "gothic@UJIS@     gothic.ttf    Pid = 3 Eid = 1" >> ${TTFONTSMAP}
	echo "mincho@UJIS@     mincho.ttf    Pid = 3 Eid = 1" >> ${TTFONTSMAP}
	;;
*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
