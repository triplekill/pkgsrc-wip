# $NetBSD$

case ${STAGE} in
DEINSTALL)
	for f in `cd @WNNDICTDIR@/ja_JP && find . -type f`;
	 do
	   ${TEST} -f ${PREFIX}/share/wnn/ja_JP/dic/${f} && ( ${RM} -f @WNNDICTDIR@/ja_JP/${f} || ${TRUE});
	 done
	for d in `cd @WNNDICTDIR@/ja_JP && find -d . -type d`;
	 do
	   ${TEST} ${d} != "." -a -d ${PREFIX}/share/wnn/ja_JP/dic/${d} && (${RMDIR} @WNNDICTDIR@/ja_JP/${d} || ${TRUE});
	 done
	;;
esac
