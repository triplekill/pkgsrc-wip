#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1.1.1 2002/10/27 16:08:53 chris Exp $

IMAPDCONF=@IMAPDCONF@

if [ -f ${IMAPDCONF} ]
then
	imap_dirs=`							\
		${AWK} '/configdirectory:/      { print $2 };		\
			/partition-.*:/         { print $2 };		\
			/sievedir:/             { print $2 }'		\
			${IMAPDCONF}					\
	`
	for dir in ${imap_dirs}
	do
		if [ -d ${dir} ]
		then
			ALL_DIRS="${ALL_DIRS} ${dir}"
		fi
	done
fi
