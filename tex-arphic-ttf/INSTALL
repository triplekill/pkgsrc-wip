#!/bin/sh
# $NetBSD$

PKGNAME=$1
STAGE=$2

SPECIALMAP=@TEXMFDIRS@/fonts/map/fontname/special.map
TTFONTSMAP=@TEXMFDIRS@/ttf2tfm/base/ttfonts.map

case ${STAGE} in
PRE-INSTALL)
	;;
POST-INSTALL)
	echo "Edit ${SPECIALMAP}"
	echo "@c Chinese TrueType fonts by Arphic:"     >> ${SPECIALMAP}
	echo "bkai00mp        arphic          bkai00mp" >> ${SPECIALMAP}
	echo "bsmi00lp        arphic          bsmi00lp" >> ${SPECIALMAP}
	echo "gbsn00lp        arphic          gbsn00lp" >> ${SPECIALMAP}
	echo "gkai00mp        arphic          gkai00mp" >> ${SPECIALMAP}

	echo "Edit ${TTFONTSMAP}"
	echo "% Chinese TrueType fonts by Arphic:"            >> ${TTFONTSMAP}
	echo "bkai00mp@UBig5@  bkai00mp.ttf  Pid = 3 Eid = 1" >> ${TTFONTSMAP}
	echo "bsmi00lp@UBig5@  bsmi00lp.ttf  Pid = 3 Eid = 1" >> ${TTFONTSMAP}
	echo "gbsn00lp@UGB@    gbsn00lp.ttf  Pid = 3 Eid = 1" >> ${TTFONTSMAP}
	echo "gkai00mp@UGB@    gkai00mp.ttf  Pid = 3 Eid = 1" >> ${TTFONTSMAP}
	;;
*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
