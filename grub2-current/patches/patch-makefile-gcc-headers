+TARGET_CC_HEADERS = $(shell $(TARGET_CC) -print-file-name=include)
+# On NetBSD 5.0, the default system compiler (gcc 4.1.3) does not have a
+# dedicated installation directory, and `gcc -print-file-name=include'
+# returns `include'.  Let's use `/usr/include' instead.
+ifeq (include, $(TARGET_CC_HEADERS))
+TARGET_CC_HEADERS = /usr/include
+endif
+TARGET_CPPFLAGS = @TARGET_CPPFLAGS@ -nostdinc -isystem $(TARGET_CC_HEADERS) -I$(srcdir)/include -I$(builddir) -I$(builddir)/include \
 	-Wall -W
