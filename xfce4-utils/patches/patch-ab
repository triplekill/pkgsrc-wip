 #!/bin/sh
 
 # fix broken $UID on some system...
+OPSYS=`uname -s`
+case "$OPSYS" in
+	*SunOS*)
+		ID_EXEC=/usr/xpg4/bin/id
+		;;
+	*)
+		ID_EXEC=id
+		;;
+esac
 if test "x$UID" = "x"; then
-	UID=`id -u`
+	UID=`$ID_EXEC -u`
 fi
 
