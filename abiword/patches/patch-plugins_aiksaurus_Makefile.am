GCC 4.6+ chokes on "--no-undefined" which older versions of GCC let fall 
to the linker.  Prefix with "-Wl," to fix build.
--- plugins/aiksaurus/Makefile.am.orig	2014-03-21 23:51:31.000000000 +0000
+++ plugins/aiksaurus/Makefile.am
@@ -4,7 +4,7 @@ if TOOLKIT_GTK
 
 if WITH_BUILTIN_AIKSAURUS_GTK
 SUBDIRS += aiksaurusgtk3
-platform_lib = aiksaurusgtk3/libAiksaurusGtk3.la
+platform_lib = aiksaurusgtk3/libAiksaurusGtk3.la -lstdc++
 endif
 
 endif
@@ -28,7 +28,7 @@ aiksaurus_la_LIBADD = \
 aiksaurus_la_LDFLAGS = \
 	-avoid-version \
 	-module \
-	-no-undefined
+	-Wl,-no-undefined
 
 aiksaurus_la_SOURCES = 
 
