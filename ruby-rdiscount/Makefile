post-install:
	${LN} -sf ${PREFIX}/${GEM_LIBDIR}/man/rdiscount.1 ${DESTDIR}${PREFIX}/${PKGMANDIR}/man1/rdiscount.1

.include "../../lang/ruby/gem.mk"
.include "../../mk/bsd.pkg.mk"
