#!/bin/sh
#
# $NetBSD: INSTALL,v 1.2 2003/01/21 06:02:41 lukem Exp $

: ${PKGNAME:=$1}
: ${STAGE:=$2}

case ${STAGE} in
PRE-INSTALL)
	;;

POST-INSTALL)
	echo "-------------------------------"
	echo "Initializing MySQL databases..."
	echo "-------------------------------"
	${PKG_PREFIX}/bin/mysql_install_db --force
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
