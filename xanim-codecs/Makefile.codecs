XANIM_DLL_CODEC.cyuv.alpha=	vid_cyuv_1.0_linuxELFalpha.tgz
XANIM_DLL_CODEC.cyuv.i386=	vid_cyuv_1.0_linuxELFx86.tgz
XANIM_DLL_CODEC.cyuv.mips=	vid_cyuv_1.0_sgiO32mips.tgz
XANIM_DLL_CODEC.cyuv.powerpc=	vid_cyuv_1.0_linuxELFppc.tgz
XANIM_DLL_CODEC.cyuv.sparc=	vid_cyuv_1.0_sunELFsparc.tgz

XANIM_DLL_CODEC.h261.alpha=	vid_h261_1.0_linuxELFalpha.tgz
XANIM_DLL_CODEC.h261.i386=	vid_h261_1.0_linuxELFx86.tgz
