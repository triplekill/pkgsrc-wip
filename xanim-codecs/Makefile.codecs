XANIM_DLL_CODEC.h263.alpha=	vid_h263_1.0_linuxELFalpha.tgz
XANIM_DLL_CODEC.h263.i386=	vid_h263_1.0_linuxELFx86.tgz
XANIM_DLL_CODEC.h263.mips=	vid_h263_1.0_sgiO32mips.tgz
