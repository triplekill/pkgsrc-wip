XANIM_DLL_CODEC.h263.sparc=	vid_h263_1.0_sunELFsparc.tgz

XANIM_DLL_CODEC.iv32.alpha=	vid_iv32_2.1_linuxELFalpha.tgz
XANIM_DLL_CODEC.iv32.i386=	vid_iv32_2.1_linuxELFx86.tgz
XANIM_DLL_CODEC.iv32.mips=	vid_iv32_2.1_sgiO32mips.tgz
XANIM_DLL_CODEC.iv32.powerpc=	vid_iv32_2.1_linuxELFppc.tgz
XANIM_DLL_CODEC.iv32.sparc=	vid_iv32_2.1_sunELFsparc.tgz

XANIM_DLL_CODEC.iv41.alpha=	vid_iv41_1.1_linuxELFalpha.tgz
XANIM_DLL_CODEC.iv41.i386=	vid_iv41_1.1_linuxELFx86.tgz
XANIM_DLL_CODEC.iv41.mips=	vid_iv41_1.0_sgiO32mips.tgz
