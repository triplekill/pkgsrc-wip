 # undef FNM_CASEFOLD
 #endif
 
+#ifndef HAVE_STRCASESTR
+char *
+   strcasestr(char *one, char *two) 
+{
+	char *a,*b,*ret;
+	int  la,lb,i=0;
+
+	if (!one||!two) return NULL;
+
+	a=strdup(one); b=strdup(two);
+	la=strlen(one); lb=strlen(two);
+	do { a[i]=toupper(a[i]); } while(a[++i]); i=0;
+       do { b[i]=toupper(b[i]); } while(b[++i]);
+
+	ret=strstr(a,b);
+
+        free (a); free(b);
+	return(ret);
+}
+#endif
+
 
