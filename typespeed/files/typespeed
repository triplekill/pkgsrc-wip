#!/bin/sh
SHAREDIR=SHAREPATH
LIBDIR=LIBPATH
CONFDIR=.typespeed

(
cd ~
	if [ ! -d ${CONFDIR} ]; then
	echo No local typespeed directory available. Let us create one!
		mkdir $CONFDIR
		cd $CONFDIR
		for i in ${SHAREDIR}/*
			do
				ln -s $i `basename ${i}`
			done
		${LIBDIR}/typespeed --makescore
	fi
	${LIBDIR}/typespeed $*
)
