DISTNAME=		GtkAda-2.2.1
CATEGORIES=		devel
MASTER_SITES=		http://libre.act-europe.fr/GtkAda/
EXTRACT_SUFX=		.tgz

MAINTAINER=		john@johnrshannon.com
HOMEPAGE=		http://libre.act-europe.fr/GtkAda/
COMMENT=		Ada95 graphical toolkit

BUILD_DEPENDS+=		gcc3-ada-[0-9]*:../../lang/gcc3-ada

export PATH=${LOCALBASE}/gcc-3.3.2/bin:${PATH}
USE_BUILDLINK2=         yes
USE_PKGLOCALEDIR=	yes
GNU_CONFIGURE=		yes
USE_GNU_TOOLS+=		make
USE_AUTOCONF=           yes
USE_X11=                yes
GCC_REQD=		3.3
MAKE_ENV+=ADAC=${LOCALBASE}/gcc-3.3.2/bin/gcc
MAKE_ENV+=ADA_INCLUDE_PATH+=${GCC_ARCHDIR}/adainclude
MAKE_ENV+=ADA_OBJECT_PATH+=${GCC_ARCHDIR}/adalib
MAKE_ENV+=GCC_EXEC_PATH+=${GCC_ARCHDIR}/

pre-configure:
	cd ${WRKSRC}; ${AUTOCONF}

.include "../../lang/gcc3-c/buildlink2.mk"
.include "../../lang/gcc3-ada/buildlink2.mk"
.include "../../x11/gtk2/buildlink2.mk"
.include "../../devel/libglade2/buildlink2.mk"
.include "../../devel/libgnomeui/buildlink2.mk"
.include "../../mk/pthread.buildlink2.mk"
.include "../../mk/autoconf.mk"
.include "../../mk/bsd.pkg.mk"
